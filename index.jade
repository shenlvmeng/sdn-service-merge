doctype html
html(lang="zh-cn")
	head
		title 业务融合演示
		meta(charset='utf-8')
		script(src='./js/jquery-1.12.4.min.js')
		script(src='./js/d3.min.js')
		script(src='./js/index.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js')
		link(rel='stylesheet' type='text/css' href='./css/font-awesome.min.css')
		link(rel='stylesheet' type='text/css' href='./css/style.css')
	body
		//- Mixin declaration
		mixin column(title)
			article
				.header
					span= title
				.topo
					svg.topo
				.panel
					if block
						block
					else
						p.empty No content provided

		#container
			+column('Firewall')
				p Deny list: 
					input(type='text' name='deny')
					button.add_d
						i.fa.fa-plus-circle(aria-hidden=true)
						="添加"
				p Allow list:
					input(type='text' name='allow')
					button.add_a 
						i.fa.fa-plus-circle(aria-hidden=true)
						="添加"
				button.start
					i.fa.fa-play-circle(aria-hidden=true)
					="启动测试"
			+column('Load Balance')
				p
					span 开启负载均衡
					span.shift
						span.button
				button.start
					i.fa.fa-play-circle(aria-hidden=true)
					="启动测试"
			+column('Firewall 2')
				p Deny list: 
					input(type='text' name='deny')
					button.add_d 添加
				p Allow list:
					input(type='text' name='allow')
					button.add_a 添加
				button.start
					i.fa.fa-play-circle(aria-hidden=true)
					="启动测试"
		#merge
			button#merge_b
				i.fa.fa-rocket(aria-hidden=true)
				!="Merge!"